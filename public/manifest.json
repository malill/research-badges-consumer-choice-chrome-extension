{
    "manifest_version": 3,
    "name": "pAI",
    "version": "0.0.1",
    "description": "The Personalized AI Assistant 'pAI'",
    "action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ]
}