{
    "name": "Product Navigator BETA",
    "manifest_version": 3,
    "version": "0.0.2",
    "description": "Simply remove decision biases from Amazon UK search pages.",
    "action": {
        "default_icon": "img/icon.png",
        "default_title": "Product Navigator"
    },
    "content_scripts": [
        {
            "css": [
                "/style/amazon/blank.css"
            ],
            "js": [
                "amazon.js"
            ],
            "matches": [
                "http://www.amazon.co.uk/s?k=*",
                "https://www.amazon.co.uk/s?k=*"
            ]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    },
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    }
}