{
    "manifest_version": 3,
    "name": "pAI",
    "version": "0.0.1",
    "description": "The Personalized AI Assistant 'pAI'",
    "action": {
        "default_icon": "img/icon.png",
        "default_title": "pAI"
    },
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [
        {
            "js": [
                "core.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        },
        {
            "js": [
                "amazon.js"
            ],
            "matches": [
                "http://www.amazon.de/*",
                "https://www.amazon.de/*"
            ]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    },
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "options_page": "settings.html",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}