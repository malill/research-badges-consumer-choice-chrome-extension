{
    "manifest_version": 3,
    "name": "ECM Bot",
    "version": "0.0.1",
    "description": "The Browser Companion ECM Bot",
    "action": {
        "default_icon": "img/icon.png",
        "default_title": "ECM Bot"
    },
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [
        {
            "js": [
                "core.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        },
        {
            "css": [
                "/style/amazon/blank/core.css"
            ],
            "js": [
                "amazon.js"
            ],
            "matches": [
                "http://www.amazon.de/*",
                "https://www.amazon.de/*",
                "http://www.amazon.co.uk/*",
                "https://www.amazon.co.uk/*"
            ]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    },
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "options_page": "settings.html",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ]
}