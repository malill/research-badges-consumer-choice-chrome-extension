{
    "name": "Product Navigator",
    "manifest_version": 3,
    "version": "0.0.4",
    "description": "Simply remove decision biases from Amazon UK search pages.",
    "action": {
        "default_icon": "img/icon.png",
        "default_title": "Product Navigator"
    },
    "content_scripts": [
        {
            "css": [
                "/style/amazon/blank.css"
            ],
            "matches": [
                "http://www.amazon.co.uk/*",
                "https://www.amazon.co.uk/*"
            ]
        },
        {
            "js": [
                "searchResultsPage.js"
            ],
            "matches": [
                "http://www.amazon.co.uk/s?k=*",
                "https://www.amazon.co.uk/s?k=*"
            ]
        },
        {
            "js": [
                "productDetailPage.js"
            ],
            "matches": [
                "http://www.amazon.co.uk/**/dp*",
                "https://www.amazon.co.uk/**/dp*",
                "http://www.amazon.co.uk/gp/product/*",
                "https://www.amazon.co.uk/gp/product/*"
            ]
        }
    ],
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    }
}